<table class="table">
  <thead>
    <tr>
      <th class="text-right">{{=T('Period')}}</th>
      <th class="text-right">{{=T('Amount')}}</th>
      <th class="text-right">{{=T('Rate')}}</th>
    </tr>
  </thead>
  <tbody>
    {{for lend in lend_book[:10]:}}
    <tr>
      <td class="text-right">{{=lend['period']}}</td>
      <td class="text-right">{{=lend['amount']}}</td>
      <td class="text-right">{{=lend['rate']}}</td>
    </tr>
    {{pass}}
  </tbody>
</table>
