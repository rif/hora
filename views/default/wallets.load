<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  {{for i, provider in enumerate(wallets):}}
  <li role="presentation" class="{{='active' if i == 0 else ''}}"><a href="#wallet-{{=IS_SLUG()(provider)[0]}}" aria-controls="wallet-{{=IS_SLUG()(provider)[0]}}" role="tab" data-toggle="tab">{{=provider}}</a></li>
  {{pass}}
</ul>


<!-- Tab panes -->

<div class="tab-content">
  {{i=0}}
  {{for provider, wallet_array in wallets.iteritems():}}
  <div role="tabpanel" class="tab-pane fade {{='in active' if i == 0 else ''}}" id="wallet-{{=IS_SLUG()(provider)[0]}}">
    <table class="table">
      <thead>
        <tr>
          <th>{{=T('Available')}}</th>
          <th>{{=T('Currency')}}</th>
          <th>{{=T('Amount')}}</th>
          <th>{{=T('Type')}}</th>
        </tr>
      </thead>
      <tbody>
        {{for wallet in wallet_array:}}
        <tr>
          <td>{{=wallet['available']}}</td>
          <td>{{=wallet['currency']}}</td>
          <td>{{=wallet['amount']}}</td>
          <td>{{=wallet['type']}}</td>
        </tr>
        {{pass}}
      </tbody>
    </table>
  </div>
  {{i+=1}}
  {{pass}}
</div>
